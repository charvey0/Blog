<div class="post-container">
  <div class="card-header col-md-10">
    <h2>
      All posts
    </h2>
  </div>
  {{#each posts as |post|}}
    <div class="post col-md-5">
      <p>
        {{post.id}}.
        {{post.title}}
      </p>
    </div>
    <div class="col-md-7">
      <p>
        {{post.body}}
      </p>
    </div>
  {{/each}}
</div>

<script src="/js/add-post.js"></script>